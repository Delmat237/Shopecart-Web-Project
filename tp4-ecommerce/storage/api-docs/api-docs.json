{
    "openapi": "3.0.0",
    "info": {
        "title": "Shopecart E-commerce API Documentation",
        "description": "Documentation des points d'accès (endpoints) de l'API Shopecart.",
        "contact": {
            "email": "contact@shopecart.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Serveur de développement"
        }
    ],
    "paths": {
        "/api/v1/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Enregistrement d'un nouvel utilisateur",
                "operationId": "registerUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Raoul Ossombe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "raoulOssombe@shopcart.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "+237653982736",
                                        "nullable": true
                                    },
                                    "address": {
                                        "type": "string",
                                        "example": "Yaounde,Melen",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Enregistrement réussi. Retourne le jeton d'accès.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Registered"
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "1|xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
                                        },
                                        "user": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erreur de validation des données."
                    }
                }
            }
        },
        "/api/v1/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Connexion de l'utilisateur",
                "operationId": "loginUser",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "raoulossombe@shopcart.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Connexion réussie. Retourne le jeton d'accès.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Login successful"
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "2|yyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyy"
                                        },
                                        "user": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Identifiants invalides."
                    }
                }
            }
        },
        "/api/v1/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Déconnexion de l'utilisateur",
                "description": "Supprime le jeton d'accès actuel de l'utilisateur.",
                "operationId": "logoutUser",
                "responses": {
                    "200": {
                        "description": "Déconnexion réussie."
                    },
                    "401": {
                        "description": "Non authentifié."
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/user": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Obtenir les informations de l'utilisateur actuel",
                "description": "Retourne les données de l'utilisateur authentifié via le jeton Bearer.",
                "operationId": "getCurrentUser",
                "responses": {
                    "200": {
                        "description": "Informations utilisateur récupérées.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non authentifié."
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/": {
            "get": {
                "tags": [
                    "Home"
                ],
                "summary": "Récupérer les produits phares pour la page d'accueil",
                "description": "Retourne une liste limitée (max 8) des produits visibles, en stock et marqués comme 'featured'.",
                "operationId": "getFeaturedProducts",
                "responses": {
                    "200": {
                        "description": "Opération réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/notifications/test-registration": {
            "post": {
                "tags": [
                    "Notifications"
                ],
                "summary": "Teste l'envoi de l'e-mail de confirmation d'inscription.",
                "description": "Nécessite qu'un utilisateur avec l'ID 1 existe.",
                "operationId": "testRegistrationEmail",
                "responses": {
                    "200": {
                        "description": "E-mail de test d'inscription envoyé avec succès (Vérifiez la console pour les erreurs)."
                    },
                    "404": {
                        "description": "Utilisateur non trouvé."
                    },
                    "500": {
                        "description": "Erreur d'envoi d'e-mail."
                    }
                }
            }
        },
        "/api/v1/notifications/test-order": {
            "post": {
                "tags": [
                    "Notifications"
                ],
                "summary": "Teste l'envoi de l'e-mail de confirmation de commande.",
                "description": "Nécessite qu'un utilisateur avec l'ID 1 existe.",
                "operationId": "testOrderEmail",
                "responses": {
                    "200": {
                        "description": "E-mail de test de commande envoyé avec succès."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Product": {
                "title": "Product",
                "description": "Modèle de données pour un produit de la boutique",
                "properties": {
                    "id": {
                        "description": "ID du produit",
                        "type": "integer"
                    },
                    "category_id": {
                        "description": "ID de la catégorie associée",
                        "type": "integer",
                        "nullable": true
                    },
                    "name": {
                        "description": "Nom du produit",
                        "type": "string"
                    },
                    "slug": {
                        "description": "Slug unique pour l'URL",
                        "type": "string"
                    },
                    "description": {
                        "description": "Description détaillée",
                        "type": "string",
                        "nullable": true
                    },
                    "price": {
                        "description": "Prix actuel",
                        "type": "number",
                        "format": "float"
                    },
                    "compare_price": {
                        "description": "Ancien prix pour afficher une réduction",
                        "type": "number",
                        "format": "float",
                        "nullable": true
                    },
                    "stock": {
                        "description": "Quantité en stock",
                        "type": "integer"
                    },
                    "sku": {
                        "description": "Code SKU",
                        "type": "string",
                        "nullable": true
                    },
                    "barcode": {
                        "description": "Code-barres",
                        "type": "string",
                        "nullable": true
                    },
                    "is_visible": {
                        "description": "Visibilité sur la boutique (true/false)",
                        "type": "boolean"
                    },
                    "is_featured": {
                        "description": "Produit mis en avant sur la page d'accueil",
                        "type": "boolean"
                    },
                    "published_at": {
                        "description": "Date de publication",
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "meta_title": {
                        "description": "Titre SEO",
                        "type": "string",
                        "nullable": true
                    },
                    "meta_description": {
                        "description": "Description SEO",
                        "type": "string",
                        "nullable": true
                    },
                    "image": {
                        "description": "Chemin de l'image principale",
                        "type": "string",
                        "nullable": true
                    },
                    "gallery": {
                        "description": "Galerie d'images",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "User",
                "description": "Modèle de données pour un utilisateur",
                "properties": {
                    "id": {
                        "description": "ID de l'utilisateur",
                        "type": "integer"
                    },
                    "name": {
                        "description": "Nom complet de l'utilisateur",
                        "type": "string"
                    },
                    "email": {
                        "description": "Adresse email unique",
                        "type": "string",
                        "format": "email"
                    },
                    "role": {
                        "description": "Rôle de l'utilisateur (ex: USER, ADMIN)",
                        "type": "string",
                        "enum": [
                            "USER",
                            "ADMIN"
                        ]
                    },
                    "created_at": {
                        "description": "Date de création de l'utilisateur",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Date de dernière mise à jour",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "description": "Entrez le jeton Bearer obtenu après la connexion.",
                "bearerFormat": "Sanctum",
                "scheme": "bearer"
            },
            "sanctum": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer <token>)",
                "name": "Authorization",
                "in": "header"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Opérations d'authentification et de gestion des utilisateurs."
        },
        {
            "name": "Home",
            "description": "Points d'accès pour la page d'accueil et les informations générales."
        },
        {
            "name": "Notifications",
            "description": "Opérations de test pour l'envoi de notifications par e-mail (Mailable)."
        }
    ]
}