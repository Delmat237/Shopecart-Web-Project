{
    "openapi": "3.0.0",
    "info": {
        "title": "Shopecart E-commerce API",
        "description": "API Backend Laravel pour le projet Shopecart - TP4",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Serveur de développement local"
        }
    ],
    "paths": {
        "/api/v1/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Liste des produits",
                "description": "Récupère la liste paginée des produits avec possibilité de filtrer",
                "operationId": "072fd15d3be55577bb08c19d19f1e75c",
                "parameters": [
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Filtrer par ID de catégorie",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "shelf",
                        "in": "query",
                        "description": "Filtrer par ID de rayon",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 2
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Recherche textuelle dans le nom et la description",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "smartphone"
                        }
                    },
                    {
                        "name": "price_min",
                        "in": "query",
                        "description": "Prix minimum",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "example": 100
                        }
                    },
                    {
                        "name": "price_max",
                        "in": "query",
                        "description": "Prix maximum",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "example": 1500
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Numéro de page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Nombre de résultats par page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 15,
                            "example": 15
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Liste des produits avec pagination",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "iPhone 15 Pro"
                                                    },
                                                    "slug": {
                                                        "type": "string",
                                                        "example": "iphone-15-pro"
                                                    },
                                                    "description": {
                                                        "type": "string",
                                                        "example": "Smartphone Apple dernière génération"
                                                    },
                                                    "base_price": {
                                                        "type": "number",
                                                        "example": 1199.99
                                                    },
                                                    "image": {
                                                        "type": "string",
                                                        "example": "products/iphone15.jpg"
                                                    },
                                                    "image_url": {
                                                        "type": "string",
                                                        "example": "http://localhost:8000/storage/products/iphone15.jpg"
                                                    },
                                                    "is_active": {
                                                        "type": "boolean",
                                                        "example": true
                                                    },
                                                    "variants": {
                                                        "type": "array",
                                                        "items": {
                                                            "properties": {
                                                                "id": {
                                                                    "type": "integer",
                                                                    "example": 1
                                                                },
                                                                "name": {
                                                                    "type": "string",
                                                                    "example": "Titanium Blue - 256GB"
                                                                },
                                                                "color": {
                                                                    "type": "string",
                                                                    "example": "Blue"
                                                                },
                                                                "size": {
                                                                    "type": "string",
                                                                    "example": "256GB"
                                                                },
                                                                "price": {
                                                                    "type": "number",
                                                                    "example": 1199.99
                                                                },
                                                                "stock": {
                                                                    "type": "integer",
                                                                    "example": 50
                                                                },
                                                                "sku": {
                                                                    "type": "string",
                                                                    "example": "IPH15-BLU-256"
                                                                },
                                                                "in_stock": {
                                                                    "type": "boolean",
                                                                    "example": true
                                                                }
                                                            },
                                                            "type": "object"
                                                        }
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "example": "2025-11-12T10:30:00.000000Z"
                                                    },
                                                    "updated_at": {
                                                        "type": "string",
                                                        "example": "2025-11-12T10:30:00.000000Z"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "links": {
                                            "properties": {
                                                "first": {
                                                    "type": "string",
                                                    "example": "http://localhost:8000/api/v1/products?page=1"
                                                },
                                                "last": {
                                                    "type": "string",
                                                    "example": "http://localhost:8000/api/v1/products?page=4"
                                                },
                                                "prev": {
                                                    "type": "string",
                                                    "example": null
                                                },
                                                "next": {
                                                    "type": "string",
                                                    "example": "http://localhost:8000/api/v1/products?page=2"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "meta": {
                                            "properties": {
                                                "current_page": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "from": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "last_page": {
                                                    "type": "integer",
                                                    "example": 4
                                                },
                                                "per_page": {
                                                    "type": "integer",
                                                    "example": 15
                                                },
                                                "total": {
                                                    "type": "integer",
                                                    "example": 50
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Products"
                ],
                "summary": "Créer un produit",
                "description": "Crée un nouveau produit avec ses variantes optionnelles",
                "operationId": "eda0d526a50c0273ae224eb766440226",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "base_price"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "iPhone 15 Pro"
                                    },
                                    "slug": {
                                        "description": "Généré automatiquement si non fourni",
                                        "type": "string",
                                        "example": "iphone-15-pro"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Smartphone Apple dernière génération avec puce A17 Pro"
                                    },
                                    "base_price": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 1199.99
                                    },
                                    "category_id": {
                                        "description": "ID de la catégorie",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "shelf_id": {
                                        "description": "ID du rayon",
                                        "type": "integer",
                                        "example": 2
                                    },
                                    "is_active": {
                                        "type": "boolean",
                                        "example": true
                                    },
                                    "variants": {
                                        "description": "Liste des variantes du produit",
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "example": "Titanium Blue - 256GB"
                                                },
                                                "color": {
                                                    "type": "string",
                                                    "example": "Blue"
                                                },
                                                "size": {
                                                    "type": "string",
                                                    "example": "256GB"
                                                },
                                                "price": {
                                                    "type": "number",
                                                    "example": 1199.99
                                                },
                                                "stock": {
                                                    "type": "integer",
                                                    "example": 50
                                                },
                                                "sku": {
                                                    "type": "string",
                                                    "example": "IPH15-BLU-256"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Produit créé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "iPhone 15 Pro"
                                                },
                                                "slug": {
                                                    "type": "string",
                                                    "example": "iphone-15-pro"
                                                },
                                                "description": {
                                                    "type": "string",
                                                    "example": "Smartphone Apple dernière génération"
                                                },
                                                "base_price": {
                                                    "type": "number",
                                                    "example": 1199.99
                                                },
                                                "is_active": {
                                                    "type": "boolean",
                                                    "example": true
                                                },
                                                "variants": {
                                                    "type": "array",
                                                    "items": {
                                                        "properties": {
                                                            "id": {
                                                                "type": "integer",
                                                                "example": 1
                                                            },
                                                            "name": {
                                                                "type": "string",
                                                                "example": "Titanium Blue - 256GB"
                                                            },
                                                            "stock": {
                                                                "type": "integer",
                                                                "example": 50
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erreur de validation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Le nom du produit est requis"
                                        },
                                        "errors": {
                                            "properties": {
                                                "name": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "Le nom du produit est requis"
                                                    }
                                                },
                                                "base_price": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "Le prix de base est requis"
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
