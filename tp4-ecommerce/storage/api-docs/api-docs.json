            "put": {
                "tags": [
                    "Products"
                ],
                "summary": "Modifier un produit",
                "description": "Met à jour les informations d'un produit existant",
                "operationId": "d3addbe72313169741e652404694ef9d",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID du produit",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    }
                ],
                "requestBody": {
                    "required": false,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "iPhone 15 Pro Max"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Smartphone Apple avec écran 6.7 pouces"
